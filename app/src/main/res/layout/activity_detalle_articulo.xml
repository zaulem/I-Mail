<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollDetalle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo_principal"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header con tÃ­tulo -->
        <TextView
            style="@style/TituloMedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalles del ArtÃ­culo"
            android:textColor="@color/texto_principal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp" />

        <!-- Card principal del artÃ­culo -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/superficie_tarjeta"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center_horizontal">

                <!-- Imagen del artÃ­culo -->
                <androidx.cardview.widget.CardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/superficie_elevada"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/ivImagen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/placeholder"
                        android:padding="8dp" />

                </androidx.cardview.widget.CardView>

                <!-- Nombre del artÃ­culo -->
                <TextView
                    android:id="@+id/tvNombre"
                    style="@style/TituloMedio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del artÃ­culo"
                    android:textColor="@color/texto_principal"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <!-- InformaciÃ³n en cards compactas -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Tipo y Cantidad en lÃ­nea -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <!-- Card Tipo -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/superficie_elevada"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:layout_marginEnd="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    style="@style/TextoSubtitulo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tipo"
                                    android:textColor="@color/texto_sugerencia"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvTipo"
                                    style="@style/TextoCuerpo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hardware"
                                    android:textColor="@color/texto_principal"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Card Cantidad -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/superficie_elevada"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:layout_marginStart="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    style="@style/TextoSubtitulo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Cantidad"
                                    android:textColor="@color/texto_sugerencia"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvCantidad"
                                    style="@style/TextoCuerpo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5"
                                    android:textColor="@color/verde_acento"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Estado y Fecha en lÃ­nea -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp">

                        <!-- Card Estado -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/superficie_elevada"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:layout_marginEnd="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    style="@style/TextoSubtitulo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Estado"
                                    android:textColor="@color/texto_sugerencia"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvEstado"
                                    style="@style/TextoCuerpo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Disponible"
                                    android:textColor="@color/azul_acento"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Card Fecha -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/superficie_elevada"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="2dp"
                            android:layout_marginStart="6dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:gravity="center">

                                <TextView
                                    style="@style/TextoSubtitulo"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha ingreso"
                                    android:textColor="@color/texto_sugerencia"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvFecha"
                                    style="@style/TextoCuerpoSecundario"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="20/07/2025"
                                    android:textColor="@color/texto_secundario"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Card de asignaciÃ³n -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/superficie_tarjeta"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TÃ­tulo de asignaciÃ³n -->
                <TextView
                    style="@style/TituloPequeno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado de AsignaciÃ³n"
                    android:textColor="@color/texto_principal"
                    android:layout_marginBottom="12dp" />

                <!-- Info de asignaciÃ³n -->
                <TextView
                    android:id="@+id/tvAsignado"
                    style="@style/TextoCuerpo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Disponible (sin asignar)"
                    android:textColor="@color/texto_secundario"
                    android:background="@color/superficie_elevada"
                    android:padding="12dp"
                    android:textStyle="italic"
                    android:layout_marginBottom="12dp"
                    android:drawableStart="@android:drawable/ic_menu_myplaces"
                    android:drawablePadding="8dp"
                    android:drawableTint="@color/azul_acento" />

                <!-- BotÃ³n asignar -->
                <Button
                    android:id="@+id/btnAsignar"
                    style="@style/BotonPrincipal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="ðŸ‘¤ Gestionar AsignaciÃ³n"
                    android:textColor="@color/texto_principal"
                    android:textSize="14sp"
                    app:backgroundTint="@color/azul_acento"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="0dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Panel de acciones administrativas -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/superficie_tarjeta"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TÃ­tulo de acciones -->
                <TextView
                    style="@style/TituloPequeno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Acciones de Administrador"
                    android:textColor="@color/texto_principal"
                    android:layout_marginBottom="16dp" />

                <!-- Botones editar y eliminar en horizontal -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- BotÃ³n editar -->
                    <Button
                        android:id="@+id/btnEditar"
                        style="@style/BotonSecundario"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="âœï¸ Editar"
                        android:textColor="@color/verde_acento"
                        android:textSize="12sp"
                        app:strokeColor="@color/verde_acento"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginEnd="8dp" />

                    <!-- BotÃ³n eliminar -->
                    <Button
                        android:id="@+id/btnEliminar"
                        style="@style/BotonPrincipal"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="ðŸ—‘ï¸ Eliminar"
                        android:textColor="@color/texto_principal"
                        android:textSize="12sp"
                        app:backgroundTint="@color/rojo_acento"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- BotÃ³n volver al menÃº -->
        <Button
            android:id="@+id/btnMenu"
            style="@style/BotonSecundario"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="â† Volver al MenÃº"
            android:textColor="@color/texto_secundario"
            android:textSize="14sp"
            app:strokeColor="@color/borde_claro"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp" />

    </LinearLayout>

</ScrollView>